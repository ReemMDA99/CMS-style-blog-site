<div class="card">
    <div class="card-header post flex-row justify-space-between">
        <div class="title">
            <span>
                <a href="/post/{{id}}">{{title}}</a>
            <span style="float:right">
                Posted by {{user.username}} on 
                {{format_date created_at}}
            </span>
            <br>
            <span style="float:right">
                {{comments.length}} 
                {{format_plural "comment" comments.length}}
            </span>
        </div>
        <div class = "card-body content">
          <p>{{post_content}}</p>
        </div>
    </div>
</div>